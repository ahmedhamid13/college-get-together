<% content_for :title, 'User' %>
<div class="jumbotron p-1">
  <h1 class="hvr-grow">User</h1>
</div>
<% if can? :read, @user %>
  <div class="container mt-4 mb-5">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <hr>
    <div class="row justify-content-center text-center p-1">
      <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success" if can? :update, @post %> |
      <%= link_to 'Back', users_path, class: "btn btn-sm btn-secondary" %>
    </div>
  </div>
<% end %>
