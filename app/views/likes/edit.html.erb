<% content_for :title, 'Editing Like' %>
<div class="jumbotron p-1">
  <h1 class="hvr-grow">Editing Like</h1>
</div>
<div class="container mt-4 mb-5">
  <div class="row justify-content-center text-center">
    <div class="col-12">
      <%= render 'form', like: @like %>
    </div>
  </div>
  <div class="row justify-content-center text-center">
    <%= link_to 'Show', @like, class: "btn btn-sm btn-warning" if can? :read, @like %> |
    <%= link_to 'Back', likes_path, class: "btn btn-sm btn-secondary" %>
  </div>
</div>
