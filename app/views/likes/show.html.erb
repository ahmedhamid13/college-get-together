<% content_for :title, 'Like' %>
<div class="jumbotron p-1">
  <h1 class="hvr-grow">Like</h1>
</div>
<div class="container mt-4 mb-5">
  <div class="row justify-content-center text-center">
    <div class="col-6 m-1  border rounded shadow p-1 pt-3">
      <h2 class="mb-4">
        <strong>Is Like:</strong>
        <%= @like.is_like %>
      </h2>
      <p>
        <strong>User:</strong>
        By: <%= @like.user.email %>
      </p>
      <p>
        <strong>Post:</strong>
        <%= link_to post_path(@like.post), class: 'hvr-bob' do %><%= @like.post.title %><% end %>
      </p>
    </div>
    <div class="col-5 m-1 border rounded shadow p-1 pt-3">
      <h3 class="mb-3">Post:</h3>
      <div>
        <h5 class="mb-4">
          <strong>Title:</strong>
          <%= @like.post.title %>
        </h5>
        <p>
          <strong>Body:</strong>
          <%= @like.post.body %>
        </p>
        <p>
          <strong>User:</strong>
          By: <%= @like.post.user.email %>
        </p>
      </div>
    </div>
  </div>
  <hr>
  <div class="row justify-content-center text-center">
    <%= link_to 'Edit', edit_like_path(@like) if can? :update, @like  %> |
    <%= link_to 'Back', likes_path %>
  </div>
</div>