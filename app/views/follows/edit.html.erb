<% content_for :title, 'Editing Follow' %>
<div class="jumbotron p-1">
  <h1 class="hvr-grow">Editing Follow</h1>
</div>
<div class="container mt-4 mb-5">
  <div class="row justify-content-center text-center">
    <div class="col-12">
      <%= render 'form', follow: @follow %>
    </div>
  </div>
  <div class="row justify-content-center text-center">
    <%= link_to 'Show', @follow, class: "btn btn-sm btn-warning" if can? :read, @follow %> |
    <%= link_to 'Back', follows_path, class: "btn btn-sm btn-secondary" %>
  </div>
</div>
