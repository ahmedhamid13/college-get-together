<% content_for :title, 'Follow' %>
<div class="jumbotron p-1">
  <h1 class="hvr-grow">Follow</h1>
</div>
<div class="container mt-4 mb-5">
  <div class="row justify-content-center text-center">
    <div class="col-12">
      <p>
        <strong>Followed:</strong>
        <%= @follow.followed_id %>
      </p>
      <p>
        <strong>User:</strong>
        <%= @follow.user_id %>
      </p>
    </div>
  </div>
  <hr>
  <div class="row justify-content-center text-center">
    <%= link_to 'Edit', edit_follow_path(@follow) if can? :update, @follow  %> |
    <%= link_to 'Back', follows_path %>
  </div>
</div>
