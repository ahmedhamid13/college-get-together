    <div class="field">
      <strong>Post:</strong>
      <%= link_to post_path(comment.post), class: 'hvr-bob' do %><%= comment.post.title %><% end %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
